extends layout

block content
  div.container
    nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
      div.container
        div.navbar-header
          button.navbar-toggle(data-toggle="collapse" data-target=".navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#") Babynote
        div.navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active
              a(href="#") Notes
          ul.nav.navbar-nav.navbar-right
            li
              a(href="#") Setting
            li
              a(href="#") Logout
          form.navbar-form.navbar-right(role="search")
            div.form-group
              input.form-control(placeholder="Search")

    div.row
      div.col-lg-3.offset-lg-2
        div.DashboardProfileCard.module
          a.DashboardProfileCard-bg.u-bgUserColor.u-block
          div.DashboardProfileCard-content
            a.DashboardProfileCard-avatarLink.u-inlineBlock
              img(src="https://pbs.twimg.com/profile_images/456669699233697793/eo1ojc48_bigger.jpeg")
            div.DashboardProfileCard-userFields
              div.DashboardProfileCard-name.u-textTruncate
                a#userInfoName.u-textInheritColor
              span.DashboardProfileCard-screenname.u-inlineBlock.u-dir
                a.DashboardProfileCard-screennameLink.u-linkComplex.u-linkClean  20 Months, Girl
            div.DashboardProfileCard-stats
              ul.DashboardProfileCard-statList.Grid
                li.DashboardProfileCard-stat.Grid-cell.u-size1of3
                  a.DashboardProfileCard-statLink.u-textCenter.u-textUserColor.u-linkClean.u-block
                    span.DashboardProfileCard-statLabel.u-block  Notes
                    span.DashboardProfileCard-statValue 5
            div.home-tweet-box.tweet-box.component.tweet-user.DashboardProfileCard-tweetbox.u-bgUserColorLightest.u-borderUserColorLighter
              form.tweet-form.condensed
                div.tweet-box.rich-editor.notie
                  Add new Note...



        // ADD NOTE
        //-h4 Add Note
        //-fieldset
          //-input#noteContent(placeholder='Content')
          //-br
          //-input#noteDate(type='text', placeholder='Date')
          //-br
          //-input#noteTag(type='text', placeholder='Tag')
          //-br
          //-input#notePhoto(type='text', placeholder='Upload')
          //-br
          //-button#btnAddNote Add Note
        // /ADD NOTE

      div.col-lg-7
        div.well
          div.row
            div.col-lg-6
              form.form-horizontal(role="form")
                div.form-group
                  div.col-lg-12
                    textarea#noteContent.form-control(rows="3", placeholder="Add new Notes...")
                div.form-group
                  div.col-lg-12
                    button.btn.btn-default.pull-right#btnAddNote Add
            div.col-lg-4
              span Try to share...
        // NOTE LIST
        div.content-header.tweet
          div.header-inner
            h4 Note List
        div.stream-container
          ol#notelist
            li.stream-item
              div.content
                div.stream-item-header
                  a.account-group.js-account-group.js-action-profile.js-user-profile-link.js-nav(href="#")
                    img.avatar.js-action-profile-avatar(src="https://pbs.twimg.com/profile_images/456669699233697793/eo1ojc48_bigger.jpeg")
                    strong.fullname.js-action-profile-name.show-popup-with-id Jacky
                    span &nbsp;
                  small.time
                    a.tweet-timestamp.js-permalink.js-nav.js-tooltip
                      span._timestamp.js-short-timestamp 03:21 PM, Apr 21

                p.js-tweet-text.tweet-text It was November. Although it was not yet late, the sky was dark when I turned into Laundress Passage. Father had finished for the day, switched off the shop lights and closed the shutters; but so I would not come home to darkness he had left on the light over the stairs to the flat. Through the glass in the door it cast a foolscap
                div.stream-item-footer
                  a.details.with-icn.js-details
                    b
                      span.expand-stream-item.js-view-details Expend
                      span.collapse-stream-item.js-view-details Collapse
                  ul.tweet-actions.js-actions
                    li.action-reply-container
                      a.with-icn.js-action-reply.js-tooltip
                        span.Icon.Icon--reply &nbsp;
                        b Reply
                    li.action-del-container
                      a.with-icn.js-action-del.js-tooltip
                        span.Icon.Icon--del &nbsp;
                        b Delete
                    li.action-fav-container
                      a.with-icn.js-action-fav.js-tooltip
                        span.Icon.Icon--favorite &nbsp;
                        b Favorite
                      a.with-icn.unfavorite.js-tooltip
                        span.Icon.Icon--unfavorite &nbsp;
                        b Unfavorite
        // /NOTE LIST
        div.stream-footer


    div.footer
      p  &copy; Babynote 2013
