extends layout

block content
  div.container
    nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
      div.container
        div.navbar-header
          button.navbar-toggle(data-toggle="collapse" data-target=".navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#") Babynote
        div.navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active
              a(href="#") Notes
          ul.nav.navbar-nav.navbar-right
            li
              a(href="#") Setting
            li
              a(href="#") Logout
          form.navbar-form.navbar-right(role="search")
            div.form-group
              input.form-control(placeholder="Search")

    div.row
      div.col-lg-3.offset-lg-2
        div.DashboardProfileCard.module
          a.DashboardProfileCard-bg.u-bgUserColor.u-block
          div.DashboardProfileCard-content
            a.DashboardProfileCard-avatarLink.u-inlineBlock
              img(src="https://pbs.twimg.com/profile_images/456669699233697793/eo1ojc48_bigger.jpeg")
            div.DashboardProfileCard-userFields
              div.DashboardProfileCard-name.u-textTruncate
                a#userInfoName.u-textInheritColor
              span.DashboardProfileCard-screenname.u-inlineBlock.u-dir
                a.DashboardProfileCard-screennameLink.u-linkComplex.u-linkClean  20 Months, Girl
            div.DashboardProfileCard-stats
              ul.DashboardProfileCard-statList.Grid
                li.DashboardProfileCard-stat.Grid-cell.u-size1of3
                  a.DashboardProfileCard-statLink.u-textCenter.u-textUserColor.u-linkClean.u-block
                    span.DashboardProfileCard-statLabel.u-block  Notes
                    span.DashboardProfileCard-statValue 5
            div.home-tweet-box.tweet-box.component.tweet-user.DashboardProfileCard-tweetbox.u-bgUserColorLightest.u-borderUserColorLighter
              form.tweet-form.condensed
                div.tweet-box.rich-editor.notie
                  Add new Note...



        // ADD NOTE
        //-h4 Add Note
        //-fieldset
          //-input#noteContent(placeholder='Content')
          //-br
          //-input#noteDate(type='text', placeholder='Date')
          //-br
          //-input#noteTag(type='text', placeholder='Tag')
          //-br
          //-input#notePhoto(type='text', placeholder='Upload')
          //-br
          //-button#btnAddNote Add Note
        // /ADD NOTE

      div.col-lg-7
        div.well
          div.row
            div.col-lg-6
              fieldset
                textarea#noteContent.form-control(rows="3", placeholder="Add new Notes...")
                button#btnAddNote Add
            div.col-lg-4
              span Try to share...
        // NOTE LIST
        div.content-header
          div.header-inner
            h4 Note List
        div.stream-container
          ol#notelist
        // /NOTE LIST
        div.stream-footer


    div.footer
      p  &copy; Babynote 2013
